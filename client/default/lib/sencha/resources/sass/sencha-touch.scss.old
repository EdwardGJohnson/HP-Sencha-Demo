body {
  font-family: Helvetica;
}

body.x-desktop {
  font-size: 100% !important;	
}

// Form fields with rounded corners
.x-field {
	border: none;
}
.x-field input, .x-field textarea, .x-field select, .x-field .x-field-slider {
	-webkit-border-radius: 10px;
	border-radius: 10px;
}

// Page title
.background {
	width: 100%;
	height: 480px;

	background-image: url("../../../../images/background.png");
}

.page_heading {
	font-weight: 700;
	font-size: 14px;
	color: #D5A740;
	margin: 0 5% 5px 5%;
}

.text {
	font-size: 12px;
	margin: 0 5% 15px 5%;
}

/*
 * Welcome Gateway Page
 */
 .agree_text {
 	font-size: 12px;
 }

/*
 * Home Page
 */
 
 .perfect_pint_icon {
 	width: 80px !important;
 	height: 80px !important;

 	background-image: url("../../../../images/icon.png");
 }

 .perfect_pub_icon {
 	width: 80px !important;
 	height: 80px !important;

 	background-image: url("../../../../images/icon.png");
 }

 /*
  * Perfect Pint
  */
.arrow_prev {
	position: absolute;
	left: 0;
	top: 0;
	z-index: 1;
}

.arrow_next {
	position: absolute;
	right: 0;
	top: 0;
	z-index: 1;
}